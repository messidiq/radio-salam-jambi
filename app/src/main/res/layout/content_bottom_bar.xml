<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_bar_height"
    android:layout_gravity="bottom">

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:background="@color/bottom_bar_color" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/img_circular_black_icon" />

    <ImageView
        android:id="@+id/img_program_list_controller"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/img_circular_white_icon" />

    <ImageView
        android:id="@+id/img_collapse_expand_arrow"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:alpha=".8"
        app:srcCompat="@drawable/img_arrow_up_icon" />

</FrameLayout>
